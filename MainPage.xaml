<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaWoW_MP.Views.MainPage_MP">

    <VerticalStackLayout Padding="20">
        <Label Text="Bienvenido a la App de WoW"
               FontSize="24"
               HorizontalOptions="Center" />

        <Button Text="Buscar Personaje"
                Clicked="GoToWoWPage"
                BackgroundColor="Purple"
                TextColor="White"
                Padding="10"/>

        <Button Text="Ver Personajes Guardados"
                Clicked="GoToSavedCharacters"
                BackgroundColor="DarkBlue"
                TextColor="White"
                Padding="10"/>
    </VerticalStackLayout>

</ContentPage>
