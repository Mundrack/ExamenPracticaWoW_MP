<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticaWoW_MP.Views.SaveCharacter_MP">

    <StackLayout Padding="20">
        <Label Text="Detalles del Personaje" FontSize="24" HorizontalOptions="Center"/>
        <Label Text="{Binding SelectedCharacter.Name}" FontSize="18"/>
        <Label Text="{Binding SelectedCharacter.Level}" FontSize="18"/>
        <Label Text="{Binding SelectedCharacter.CharacterClass.Name}" FontSize="18"/>
        <Button Text="Guardar en SQLite" Clicked="OnSaveClicked"/>
    </StackLayout>
</ContentPage>