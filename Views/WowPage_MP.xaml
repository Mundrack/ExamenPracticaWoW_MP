<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PracticaWoW_MP.Views"
             x:Class="PracticaWoW_MP.Views.WowPage_MP">

    <StackLayout Padding="20">
        <Entry x:Name="RealmEntry" Placeholder="Ingrese el reino" />
        <Entry x:Name="NameEntry" Placeholder="Ingrese el nombre del personaje" />
        <Button Text="Buscar" Clicked="OnSearchClicked" />

        <ListView x:Name="CharacterListView" ItemsSource="{Binding Characters}" SelectionMode="Single">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding CharacterClass.Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>